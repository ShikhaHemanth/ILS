<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Activity</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/student/css/header.css">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 20px;
        }
        .left-section {
            flex: 1;
            font-size: 30px;
            padding-left: 30px;
            padding-top: 20px;
        }
        .task-card {
            background: #a7c7e7;
            padding: 30px;
            border-radius: 8px;
            color: white;
            flex: 0.3;
            margin-top: 30px;
            width: 500px;
        }
        .task-card a {
            color: white;
            text-decoration: none;
            font-size: 20px;
        }
        .task-card a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="dashboard container-fluid">
        <div class="header">
            <button class="btn btn-light" id="back" onclick="history.back()">&#8592;</button>
            <div class="nav-links">
                <div id="content">Content</div>
                <div id="submissions">Submissions</div>
                <div id="feedback">Feedback</div>
            </div>
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="settingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    ⚙️
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingsDropdown">
                    <li><a class="dropdown-item" href="#" id="logout">Logout</a></li>
                </ul>
            </div>
        </div>
        <div class="content">
            <div class="left-section">
                <h2><i>Activity!</i></h2>

                <!-- Whiteboard Button -->
                <div id="openWhiteboard" class="whiteboard-launch" style="text-align: right; margin-bottom: 10px;">
                    <button class="btn btn-primary">Open Whiteboard</button>
                </div>
                

                <div class="task-card">
                    <h3><%= assignment.title %></h3>
                    <p><%= assignment.description %></p>
                </div>
            </div>
        </div>
    </div>
    <script>
        function handlePageShow(event) {
            if (event.persisted) {
                checkTokenLocalStorage();
            }
        }

        function checkTokenLocalStorage() {
            if (!localStorage.getItem('token')) {
                window.location.href = '/login';
            }
        }

        window.addEventListener('pageshow', handlePageShow);

        document.getElementById("content").addEventListener("click", function() {
            window.location.href = "/student_dashboard/<%= subjectName %>";
        });
        document.getElementById("submissions").addEventListener("click", function() {
            window.location.href = "/student_dashboard/<%= subjectName %>/activity/submission";
        });
        document.getElementById("feedback").addEventListener("click", function() {
            window.location.href = "/student_dashboard/feedback";
        });
        document.getElementById("back").addEventListener("click", function() {
            window.location.href = "/student_dashboard/<%= subjectName %>";
        });
        document.getElementById("logout").addEventListener("click", function() {
            localStorage.removeItem('token');
            window.location.href = "/login";
        });

        // Whiteboard button click
        document.getElementById("openWhiteboard").addEventListener("click", function() {
            window.location.href = "/student/whiteboard";
        });
    </script>
</body>
</html>

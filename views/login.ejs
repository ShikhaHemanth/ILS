<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa;
        }
        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: relative;
        }
        .toggle-password {
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 38px;
            font-size: 1.2em;
            color: #5C9DED;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h2 class="text-center mb-4">Login</h2>

        <% if (error) { %>
            <p class="text-danger text-center"><%= error %></p>
        <% } %>

        <form id="loginForm">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
            </div>
            <div class="mb-3 position-relative">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
                <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
            </div>
            <div class="d-grid">
                <button type="button" onclick="loginJS()" class="btn btn-primary" style="background-color: #93BAEE">Login</button>
            </div>
        </form>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById("password");
            passwordField.type = passwordField.type === "password" ? "text" : "password";
        }

        function loginJS() {
            var email = document.getElementById('email').value;
            var password = document.getElementById('password').value;
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/login', true);
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhr.onreadystatechange = function() {
                if (xhr.readyState === 4) {
                    console.log("Server Response:", xhr.responseText); // Debugging line
                    if (xhr.status === 200) {
                        try {
                            var response = JSON.parse(xhr.responseText);
                            if (response.success) {
                                localStorage.setItem('token', email);
                                window.location.href = response.redirectUrl;
                            } else {
                                alert(response.message);
                            }
                        } catch (error) {
                            console.error("JSON Parse Error:", error);
                            alert('Server Error.');
                        }
                    } else {
                        alert('Error occurred while logging in.');
                    }
                }
            };
            xhr.send('email=' + encodeURIComponent(email) + '&password=' + encodeURIComponent(password));
        }

        function deleteTokenLocalStorage() {
            localStorage.removeItem('token');
        }

        // Clear login token when the page loads
        window.onload = function() {
            deleteTokenLocalStorage();
        };
    </script>
</body>
</html>
